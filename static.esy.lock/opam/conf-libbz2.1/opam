  ["bzip2-dev"] {os-family = "alpine"}
  ["bzip2-devel"] {os-distribution = "fedora"}
  ["bzip2-devel"] {os-distribution = "rhel"}
  ["bzip2-devel"] {os-distribution = "centos"}
  ["bzip2-devel"] {os-distribution = "ol"}
