  ["bzip2"] {os = "freebsd"}
  ["bzip2"] {os = "openbsd"}
  ["bzip2"] {os = "netbsd"}
  ["bzip2"] {os = "macos" & os-distribution = "homebrew"}
  ["bzip2"] {os = "macos" & os-distribution = "macports"}
]
synopsis: "Virtual package relying on libbz2"
description:
  "This package can only install if the libbz2 library is installed on the system."
