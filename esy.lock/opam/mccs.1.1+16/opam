depends: [
  "ocaml"
  "dune" {>= "1.0"}
  "cudf" {>= "0.7"}
]
build: [
  ["dune" "build" "-p" name "-j" jobs]
  ["sh" "-c" "dune build @settests --auto-promote || true"] {with-test}
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
